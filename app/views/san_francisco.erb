<body class="col-light">
  <!-- 2 COL HAND NAVBAR **************************************** -->
  <!-- ********************************************************* -->

  <nav class="container header">
    <div class="row navigation">
      <div class="col-md-3 logo">
        <img src="/images/logo-blue.svg" alt="">
      </div>

      <div class="col-md-offset-5 col-md-1">
        <a href="/veunes/new"><button type="button" class="btn btn-default" >Add Event</button></a>
      </div>

      <div class="col-md-3">

            <div class="input-group">
              <div class="input-group-addon">Welcome</div>
               <input type="email" class="form-control" id="exampleInputEmail2" placeholder="Enter email">
            </div>
          </div>
        </div>
      </div>
    </nav>



   <!-- LEFT HAND NAVIGATION OPEN-->
    <div class="col-md-2 left-navi">

      <!-- Weeks dropdown -->
      <div class="btn-group navbar">
        <button class="btn btn-default  btn-block problembutton" type="button" data-toggle="dropdown">
          2 weeks
          <span class="caret"></span>
        </button>
        <ul class="dropdown-menu dropdown" role="menu">
          <li><a class="dropdown" href="#">4 weeks</a>
          </li>
          <li><a href="#">8 weeks</a>
          </li>
        </ul>
      </div>

    <!-- TOGGLE SIDEBAR -->
      <div class="panel-group" id="accordion" role="tablist" aria-multiselectable="true">
        <div class="panel panel-default">

          <!-- Event types headlines-->
          <div class="panel-heading" role="tab" id="headingOne">
            <h4 class="panel-title">
              <a data-toggle="collapse" data-parent="#accordion" href="#collapseOne" aria-expanded="true" aria-controls="collapseOne">Event Types</a>
            </h4>
          </div>

          <!-- Event types check box content -->
          <div id="collapseOne" class="panel-collapse collapse in" role="tabpanel" aria-labelledby="headingOne">
            <div class="panel-body">
              <div class="btn-group-vertical events">
                <div id="milongas" class="checkbox">
                  <label>
                    <input type="checkbox" value="milonga" name="milonga" checked>Milongas
                  </label>
                </div>
                <div id="drop_in_classes" class="checkbox">
                  <label>
                    <input type="checkbox" value="drop_in_class" name="drop_in_clas" checked>Drop-in  Classes
                  </label>
                </div>
                <div id="worskops"class="checkbox">
                  <label>
                    <input type="checkbox" value="series_workshop" name="series_workshop" checked>Series /Worskops
                  </label>
                </div>
                <div id="practicas"class="checkbox">
                  <label>
                    <input type="checkbox" value="practicas" name="practicas" checked>Practicas
                  </label>
                </div>
                <div id="live_"class="checkbox">
                  <label>
                    <input type="checkbox" value="live_" name="live_" checked>Live Music
                  </label>
                </div>
                <div id="performances"class="checkbox">
                  <label>
                    <input type="checkbox" value="performances" name="performances" checked>Performances
                  </label>
                </div>
              </div>
            </div>
          </div>



          <!-- Area panel default -->
          <div class="panel panel-default">
            <div class="panel-heading" role="tab" id="headingTwo">
              <h4 class="panel-title">
                <a  data-toggle="collapse" data-parent="#accordion" href="#collapseTwo" aria-expanded="false" aria-controls="collapseTwo">Areas</a></h4>
              </div>

              <!-- Area checkbox -->
              <div id="collapseTwo" class="panel-collapse collapse in " role="tabpanel" aria-labelledby="headingTwo">
                <div class="panel-body">
                  <div class="btn-group-vertical events">
                    <div id="east_bay" class="checkbox">
                      <label>
                        <input type="checkbox" value="east_bay" name="east_bay" checked>East Bay
                      </label>
                    </div>
                    <div id="contro_costa" class="checkbox">
                      <label>
                        <input type="checkbox" value="contro_costa" name="contra_costa" checked>Contro Costa
                      </label>
                    </div>
                    <div id="humboldt" class="checkbox">
                      <label>
                        <input type="checkbox" value="humboldt" name="humboldt" checked>Humboldt
                      </label>
                    </div>
                    <div id="marin" class="checkbox">
                      <label>
                        <input type="checkbox" value="marin" name="marin" checked>Marin
                      </label>
                    </div>
                    <div id="mendocino" class="checkbox">
                      <label>
                        <input type="checkbox" value="mendocino" name="mendocino" checked>Mendocino
                      </label>
                    </div>
                    <div id="monterey" class="checkbox">
                      <label>
                        <input type="checkbox" value="monterey" name="monterey" checked>Monterey
                      </label>
                    </div>
                    <div id="san_francisco" class="checkbox">
                      <label>
                        <input type="checkbox" value="san_francisco" name="san_francisco" checked>San Francisco
                      </label>
                    </div>
                    <div id="south_bay" class="checkbox">
                      <label>
                        <input type="checkbox" value="south_bay" name="south_bay" checked>South Bay
                      </label>
                    </div>
                  </div>
                </div>
              </div>
            </div>

          </div>
        </div>


        <!-- MAP -->
        <!-- small map left navi -->
        <div>
          <a href="#myMapModal" data-toggle="modal"><img id="image" src="/images/google_maps.jpg" alt=""></a>
        </div>
        <!-- animated map -->
        <div class="modal fade" id="myMapModal">
          <div class="modal-dialog">
            <div class="modal-content">
              <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-hidden="true">Ã—</button>
                <h4 class="modal-title">Tango Events</h4>

              </div>
              <div class="modal-body">
                <div class="container">
                  <div class="row">
                    <div id="map-canvas" class=""></div>
                  </div>
                </div>
              </div>
              <div class="modal-footer">
               <form action="/show-venues" method="post">
                 <input type="date" id="show-dates" name="date">
                 <input type="submit" id="show-events" value="Show Events">
               </form>
             </div>
           </div>
         </div>
       </div>

     </div> <!-- left hand navigation closes-->


   <!-- Table container -->
   <div class="col-md-10">
    <!-- FIRST WEEK -->
    <table class="table table-striped">
        <tbody class="bg-white">
        <!-- days-->
        <tr>
          <%today = Date.today%>
          <%@days_from_this_week = (today.at_beginning_of_week..today.at_end_of_week).map %>
          <%(today.at_beginning_of_week..today.at_end_of_week).map.each_with_index do |day ,index| %>
          <th class="col-dark col-white text-center day col-md-1">  <%=day%> <br><%=day.strftime('%A')%></th>
          <%end%>
        </tr>
        <!-- First week Schedule-->
        <tr>
          <td >
            <div>
             <% @monday.each do |test| %><div class="first_row"> <%= test.address%><hr></div><% end %>
           </div>
         </td>
         <td>
          <div >
              <% @tuesday.each do |test| %> <div class="first_row"> <%= test.address%><hr></div><% end %>
          </div>
        </td>
        <td>
          <div >
              <% @wednesday.each do |test| %><div class="first_row"><%= test.address%><hr></div><% end %>
          </div>
        </td>
        <td>
          <div >
              <% @thursday.each do |test| %><div class="first_row"><%= test.address%><hr></div><% end %>
          </div>
        </td>
        <td>
          <div >
              <% @friday.each do |test| %><div class="first_row"><%= test.address%><hr></div><% end %>
          </div>
        </td>
        <td>
          <div >
              <% @saturday.each do |test| %><div class="first_row"><%= test.address%><hr></div><% end %>
          </div>
        </td>
        <td>
          <div >
             <% @sunday.each do |test| %><div class="first_row"><%= test.address%><hr></div><% end %>
          </div>
        </td>
      </tr>
    </tbody>
  </table>


  <!-- SECOND WEEK -->
  <table class="table table-striped">
    <tbody class="bg-white">
      <!-- days-->
      <tr>
        <%today = Date.today%>
        <%@days_from_this_week = (today.next_week.at_beginning_of_week..today.next_week.at_end_of_week).map %>
        <%(today.next_week.at_beginning_of_week..today.next_week.at_end_of_week).map.each_with_index do |day ,index| %>
        <th class="col-dark col-white text-center day col-md-1"> <%=day%> <br><%=day.strftime('%A')%></td>
         <%end%>
       </tr>
       <!-- First week Schedule-->

       <tr>
        <td>

          <div>
            <% @nextmonday.each do |test| %><div class="first_row"><%= test.address%><hr></div><% end %>
          </div>
        </td>
        <td>

          <div>
            <% @nexttuesday.each do |test| %><div class="first_row"><%= test.address%><hr></div><% end %>
          </div>
        </td>
        <td>

          <div>
            <% @nextwednesday.each do |test| %><div class="first_row"><%= test.address%><hr></div><% end %>
          </div>
        </td>
        <td>

          <div>
            <% @nextthursday.each do |test| %><div class="first_row"><%= test.address%><hr></div><% end %>
          </div>
        </td>
        <td>

          <div>
            <% @nextfriday.each do |test| %><div class="first_row"><%= test.address%><hr></div><% end %>
          </div>
        </td>
        <td>

          <div>
            <% @nextsaturday.each do |test| %><div class="first_row"><%= test.address%><hr></div><% end %>
          </div>
        </td>
        <td>

          <div>
            <% @nextsunday.each do |test| %><div class="first_row"><%= test.address%><hr></div><% end %>
          </div>
        </td>
      </tr>
    </tbody>
  </table>

  <!-- END *************************************************** -->
  <!-- ********************************************************* -->



</body>